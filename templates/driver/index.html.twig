{% extends 'base.html.twig' %}
{% block body %}
    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>License</th>
            <th>Age</th>
            <th>Cars</th>
        </tr>
        </thead>
        <tbody>
        {% for driver in drivers %}
            <tr>
                <td>{{ driver.name }}</td>
                <td>{{ driver.license }}</td>
                <td>{{ driver.age }}</td>
                    {% for car in driver.cars %}
                    <td>{{ car.make }}</td>
                    {% endfor %}
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
